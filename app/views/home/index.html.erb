<h1>Welcome to MyQuote</h1>
<p>Share and discover quotes from around the world!</p>
<h3>Recently Added Quotes</h3>
<hr />
<% @quotes.each do |quote| %>
    <div class="card bg-body-tertiary" style="margin-bottom:10px">
        <div class="card-body">
            <h5 class="card-title"> <%= quote.qtext %> </h5>
            <p class="card-text">
                <strong><%= quote.source.fname %> <%= quote.source.lname %></strong><br />
                [<a href="/quotes/<%= quote.id %>">Read full quote</a>]
            </p>
        </div>
    </div>
<% end %>